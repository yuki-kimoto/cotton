package Cotton::Node {
  allow Cotton;

  use SPVM::Hash;
  use SPVM::StringList;
  
  has first : rw Cotton::Node;
  has last : rw Cotton::Node;
  has sibparent : rw Cotton::Node;
  has moresib : rw byte;
  has tag : rw string;
  has id : rw string;
  has style : rw SPVM::Hash;
  has classes : rw string[];
  has text : rw string;
  has calcurated_style : rw SPVM::Hash;
  
  sub new : Cotton::Node () {
    return new Cotton::Node;
  }
}
