class Eg::Style {
  allow Eg;
  allow Eg::Node;
  
  # Fields
  has style_h : ro Hash of string;
  
  # Class Methods
  static method new : Eg::Style ($style_pairs : object[] = undef) {
    
    my $self = new Eg::Style;
    
    $self->{style_h} = Hash->new($style_pairs);
    
    return $self;
  }
  
}
