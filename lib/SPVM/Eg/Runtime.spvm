class Eg::Runtime {
  
  use Eg::API;
  use Eg::Window;
  
  # Fields
  has api : rw Eg::API;
  
  has window : rw Eg::Window;
  
  # Class Methods
  static method new : Eg::Runtime ($options : object[] = undef) {
    my $options_h = Hash->new($options);
    
    my $self = new Eg::Runtime;
    
    $self->{api} = Eg::API->new;
    
    return $self;
  }
  
}
