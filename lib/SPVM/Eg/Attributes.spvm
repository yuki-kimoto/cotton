class Eg::Attributes {
  allow Eg;
  allow Eg::Node;
  
  use Eg::Style;
  
  # Fields
  has attributes_h : ro Hash of string;
  
  # Class Methods
  static method new : Eg::Attributes ($attribute_pairs : object[] = undef) {
    
    my $self = new Eg::Attributes;
    
    $self->{attributes_h} = Hash->new($attribute_pairs);
    
    return $self;
  }
}
