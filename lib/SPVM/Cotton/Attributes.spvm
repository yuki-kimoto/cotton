class Cotton::Attributes {
  allow Cotton;
  allow Cotton::Node;
  
  use Cotton::Style;
  
  # Fields
  has attributes_h : ro Hash of string;
  
  has style : Cotton::Style;
  
  # Class Methods
  static method new : Cotton::Attributes ($attribute_pairs : object[] = undef) {
    
    my $self = new Cotton::Attributes;
    
    $self->{attributes_h} = Hash->new($attribute_pairs);
    
    return $self;
  }
}
