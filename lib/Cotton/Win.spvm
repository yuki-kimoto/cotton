package Cotton::Win {
  use Cotton::Win::App;
  use Cotton::Node;
  use Cotton(body, h1, div, a, id, class);

  sub main : int ($args : string[]) {
    my $app = Cotton::Win::App->new;
    
    my $body = body(
      h1("ヘッド1"),
      div(
        id("id"),
        "コンテント"
      ),
      div(
        id("id"),
        "コンテント"
      ),
    );
    
    Cotton->calc_render_info($body);
    
    $app->set_title("コットン");
    
    $app->run;
  }
}
